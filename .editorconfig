##########################################
# Common Settings
##########################################

# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# JSON
[*.{json,json5,webmanifest}]
indent_size = 2

# Markdown
[*.{md,mdx}]
trim_trailing_whitespace = false

# Visual Studio
[*.{csproj}]
indent_size = 2
